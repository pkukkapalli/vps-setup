{
  "name": "vps-setup",
  "version": "1.2.0",
  "description": "Interactive VPS security setup (UFW, SSH, updates, Nginx, fail2ban)",
  "type": "module",
  "main": "run.mjs",
  "bin": { "vps-setup": "./run.mjs" },
  "scripts": {
    "start": "node run.mjs",
    "run": "node run.mjs run",
    "run:all": "node run.mjs run --all",
    "build": "node build.mjs && pkg dist/run.cjs -t node18-linux-x64,node18-linux-arm64 -o dist/vps-setup --no-bytecode --public-packages '*' --public --compress GZip"
  },
  "pkg": {
    "scripts": "run.mjs",
    "targets": ["node18-linux-x64", "node18-linux-arm64"],
    "outputPath": "dist"
  },
  "keywords": ["vps", "security", "ufw", "ssh", "cli"],
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@inquirer/prompts": "^5.4.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.1.0"
  },
  "engines": { "node": ">=18" },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.0.0",
    "esbuild": "^0.24.0"
  }
}
